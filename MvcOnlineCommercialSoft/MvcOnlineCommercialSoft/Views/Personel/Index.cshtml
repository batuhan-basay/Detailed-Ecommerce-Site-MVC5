@using MvcOnlineCommercialSoft.Models.Siniflar
@model List<Personel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />

<table class="table table-bordered" style="margin-top:30px">
    <tr>
        <th>ID</th>
        <th>Personel Adı</th>
        <th>Personel Soyadı</th>
        <th>Görsel</th>
        <th>Departman</th>
        <th>Güncelle</th>
        <th>Satışlar</th>
    </tr>
    @foreach (var k in Model)
    {
<tr>
    <td>@k.Personelid</td>
    <td>@k.PersonelAd</td>
    <td>@k.PersonelSoyad</td>
    <td>@k.PersonelGorsel</td>
    <td>@k.Departman.DepartmanAd</td>
    <td><a href="/Personel/PersonelGetir/@k.Personelid" class="btn btn-warning">Güncelle</a></td>
    <td><a href="/Departman/DepartmanPersonelSatis/@k.Personelid" class="btn btn-success">Satışlar</a></td>
  
</tr>
    }
</table>
<td><a href="/Personel/PersonelEkle" class="btn btn-info">Personel Ekle</a></td>




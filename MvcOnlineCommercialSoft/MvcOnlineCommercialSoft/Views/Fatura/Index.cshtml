@using MvcOnlineCommercialSoft.Models.Siniflar
@model List<Faturalar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<table class="table table-bordered" style="margin-top:30px">
    <tr>
        <th>ID</th>
        <th>Seri No</th>
        <th>Sıra No</th>
        <th>Vergi Dairesi</th>
        <th>Tarih</th>
        <th>Saat</th>
        <th>Teslim Eden</th>
        <th>Teslim Alan</th>
        <th>Toplam</th>
        <th>Güncelle</th>
        <th>Detaylar</th>

    </tr>
    @foreach (var k in Model)
    {
    <tr>
        <td>@k.Faturaid</td>
        <td>@k.FaturaSeriNo</td>
        <td>@k.FaturaSıraNo</td>
        <td>@k.VergiDairesi</td>
        <td>@k.Tarih.ToShortDateString()</td>
        <td>@k.Saat</td>
        <td>@k.TeslimEden</td>
        <td>@k.TeslimAlan</td>
        <td>@k.Toplam</td>
        <td><a href="/Fatura/FaturaGetir/@k.Faturaid" class="btn btn-success">Güncelle</a></td>
        <td><a href="/Fatura/FaturaDetay/@k.Faturaid" class="btn btn-primary">Detaylar</a></td>
    </tr>
    }
</table>
<td><a href="/Fatura/FaturaEkle" class="btn btn-info">Yeni Fatura Girişi</a></td>



@using MvcOnlineCommercialSoft.Models.Siniflar
@model List<Faturalar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<table class="table table-bordered" style="margin-top:30px">
    <tr>
        <th>Seri No ve Sıra No</th>
        <th>Tarih</th>
        <th>Saat</th>
        <th>Toplam</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
        <th>Pop Liste</th>
        <th>Yeni Kalem</th>

    </tr>
    @foreach (var k in Model)
    {
    <tr>
        <td>@k.FaturaSeriNo @k.FaturaSıraNo</td>
        <td>@k.Tarih.ToShortDateString()</td>
        <td>@k.Saat</td>
        <td>@k.Toplam ₺</td>
        <td><a href="/Fatura/FaturaGetir/@k.Faturaid" class="btn btn-success">Güncelle</a></td>
        <td><a href="/Fatura/FaturaDetay/@k.Faturaid" class="btn btn-primary">Detaylar</a></td>
        <td><a href="/Fatura/FaturaDetay/@k.Faturaid" class="btn btn-danger">Popup Liste</a></td>
        <td><a href="/Fatura/FaturaDetay/@k.Faturaid" class="btn btn-secondary">Yeni Kalem</a></td>
    </tr>
    }
</table>
<td><a href="/Fatura/FaturaEkle" class="btn btn-info">Yeni Fatura Girişi</a></td>


